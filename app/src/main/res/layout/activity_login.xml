<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!--<ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginLoading"
            tools:visibility="gone" app:layout_constraintTop_toBottomOf="@+id/loginAppTitle"
            app:layout_constraintBottom_toTopOf="@+id/loginButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>-->
    <EditText
            android:layout_width="263dp"
            android:layout_height="0dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/loginEditEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginAppTitle" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/loginEditPassword" android:selectAllOnFocus="true"
            android:hint="@string/prompt_email" android:autofillHints="emailAddress"/>
    <EditText
            android:layout_width="264dp"
            android:layout_height="0dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/loginEditPassword"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginEditEmail" android:layout_marginBottom="27dp"
            app:layout_constraintBottom_toTopOf="@+id/loginButton" android:hint="@string/prompt_password"
            android:autofillHints="password"/>
    <Button
            android:text="@string/login_button"
            android:layout_width="198dp"
            android:layout_height="0dp" android:id="@+id/loginButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginEditPassword" android:layout_marginBottom="340dp"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/loginAppTitle"
            android:textSize="60sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="103dp"
            android:layout_marginBottom="23dp" app:layout_constraintBottom_toTopOf="@+id/loginEditEmail"/>
</androidx.constraintlayout.widget.ConstraintLayout>